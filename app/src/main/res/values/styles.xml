<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="materialAlertDialogTheme">@style/MyMaterialAlertDialog</item>
    </style>

    <style name="MyMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@android:color/darker_gray</item>
    </style>

    <style name="LabelTheme" parent="AppTheme">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DividerTheme" parent="AppTheme">
        <item name="android:background">@color/colorDividerBackground</item>
    </style>

    <style name="PhotoCoverTheme" parent="AppTheme">
        <item name="android:background">@color/colorTransparentBackground</item>
    </style>
</resources>
